<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-90"
                android:centerColor="@color/blue_700"
                android:endColor="@color/blue_400"
                android:startColor="@color/blue_700" />

            <corners android:radius="15dp" />
        </shape>
    </item>

    <item
        android:bottom="1dp">
        <shape android:shape="rectangle" >
            <!--<solid android:color="@color/grey_dark4" />-->
            <gradient
                android:angle="-90"
                android:startColor="@color/grey_dark4"
                android:centerColor="@color/grey_dark"
                android:endColor="@color/blue_700">
            </gradient>
            <corners android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"/>
        </shape>
    </item>

</layer-list>
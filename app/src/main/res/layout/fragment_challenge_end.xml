<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    tools:context=".ui.challenge.ChallengeEndFragment">

    <TextView
        style="@style/big_TitleText"
        android:id="@+id/failCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="FAILCOUNT"
        android:textSize="22sp"/>

    <TextView
        style="@style/big_TitleText"
        android:id="@+id/coinsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="COINS"
        android:textSize="22sp"/>

    <TextView
        style="@style/big_TitleText"
        android:id="@+id/expTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="EXP"
        android:textSize="22sp"/>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/endOfChallengeBtn"
        style="@style/big_TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/grey_light4"
        android:text="@string/finish"
        android:textSize="20dp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <TextView
            style="@style/big_TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aldrin_bold"
            android:text="Welcome to logicae! Download this App was the first step to become a professional Java Developer !"
            android:textSize="20dp" />

        <TextView
            style="@style/big_TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/aldrin_bold"
            android:text="Please type in your name"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/nameEditTxt"
            style="@style/small_DescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/aldrin_bold"
            android:inputType="textPersonName"
            android:textSize="20dp"
            app:backgroundTint="@color/grey_light" />

        <Button
            android:id="@+id/readyToStart"
            style="@style/big_TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/grey_light4"
            android:text="@string/ready_to_start"
            app:backgroundTint="@color/grey_light" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>